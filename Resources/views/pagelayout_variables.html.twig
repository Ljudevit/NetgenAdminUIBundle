{% spaceless %}

{# SITE NAME #}

{% set siteName = ezpublish.configResolver.getParameter( 'site_settings.site_name', 'ngmore' ) %}

{# SIDE MENU #}

{% if showSideMenu is not defined %}
    {% set showSideMenu = true %}
{% endif %}

{# PATH ARRAY #}

{% if pathArray is not defined %}
    {% if content is defined and location is defined and not location.isDraft %}
        {% set pathArray = ngmore_location_path( location.id, true ) %}
    {% elseif module_result.node_id is defined %}
        {% set pathArray = ngmore_location_path( module_result.node_id, true ) %}
    {% else %}
        {% set pathArray = [] %}
    {% endif %}
{% endif %}

{% endspaceless %}{% block pagelayout_content %}{% endblock %}
