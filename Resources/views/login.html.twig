{% extends layout %}

{% block content %}
    {% block login_content %}
        {% if error %}
            <div class="message-warning">
                <h2><span class="time">[{{ 'now'|date( 'd.m.Y H:i' ) }}]</span> {{ error.message|trans }}</h2>

                <ul>
                    <li>{{ 'Make sure that the username and password is correct.'|trans }}</li>
                    <li>{{ 'All letters must be entered in the correct case.'|trans }}</li>
                    <li>{{ 'Please try again or contact the site administrator.'|trans }}</li>
                </ul>
            </div>
        {% endif %}

        <div class="context-block">
            <form name="loginform" method="post" action="{{ path( 'login_check' ) }}">
                {% block login_fields %}
                    <div class="login-inputs context-attributes">
                        <div class="block">
                            <div class="login-input-wrapper">
                                <div id="icon-login"></div>
                                <input class="halfbox" type="text" autofocus="autofocus" size="10" name="_username" id="logintext" placeholder="{{ 'Username'|trans }}" tabindex="1" title="{{ 'Enter a valid username in this field.'|trans }}" />
                            </div>
                        </div>

                        <div class="block">
                            <div class="login-input-wrapper">
                                <div id="icon-password"></div>
                                <input class="halfbox" type="password" size="10" name="_password" id="passwordtext" placeholder="{{ 'Password'|trans }}" tabindex="2" title="{{ 'Enter a valid password in this field.'|trans }}" />
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}

                    <div class="controlbar">
                        <div class="box-bc">
                            <div class="box-ml">
                                <div class="block">
                                    <div class="login-input-wrapper">
                                        <input class="defaultbutton" type="submit" id="loginbutton" value="{{ 'Log in'|trans }}" tabindex="3" title="{{ 'Click here to log in using the username/password combination entered in the fields above.'|trans }}" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </form>
        </div>
    {% endblock %}
{% endblock %}
