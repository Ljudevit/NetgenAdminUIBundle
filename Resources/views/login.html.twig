{% extends layout %}

{% block content %}
    {% block login_content %}
        {% if error %}
            <div class="message-warning">
                <h2><span class="time">[{{ 'now'|date( 'd.m.Y H:i' ) }}]</span> {{ error.message|trans }}</h2>

                <ul>
                    <li>{{ 'ngmore_admin_ui.login.message.username_password'|trans }}</li>
                    <li>{{ 'ngmore_admin_ui.login.message.letter_case'|trans }}</li>
                    <li>{{ 'ngmore_admin_ui.login.message.contact_admin'|trans }}</li>
                </ul>
            </div>
        {% endif %}

        <div class="context-block">
            <form name="loginform" method="post" action="{{ path( 'login_check' ) }}">
                {% block login_fields %}
                    <div class="login-inputs context-attributes">
                        <div class="block">
                            <div class="login-input-wrapper">
                                <div id="icon-login"></div>
                                <input class="halfbox" type="text" autofocus="autofocus" size="10" name="_username" id="logintext" placeholder="{{ 'ngmore_admin_ui.login.username'|trans }}" tabindex="1" title="{{ 'ngmore_admin_ui.login.username.title'|trans }}" />
                            </div>
                        </div>

                        <div class="block">
                            <div class="login-input-wrapper">
                                <div id="icon-password"></div>
                                <input class="halfbox" type="password" size="10" name="_password" id="passwordtext" placeholder="{{ 'ngmore_admin_ui.login.password'|trans }}" tabindex="2" title="{{ 'ngmore_admin_ui.login.password.title'|trans }}" />
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token( "authenticate" ) }}" />

                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}

                    <div class="controlbar">
                        <div class="box-bc">
                            <div class="box-ml">
                                <div class="block">
                                    <div class="login-input-wrapper">
                                        <input class="defaultbutton" type="submit" id="loginbutton" value="{{ 'ngmore_admin_ui.login.submit'|trans }}" tabindex="3" title="{{ 'ngmore_admin_ui.login.submit.title'|trans }}" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </form>
        </div>
    {% endblock %}
{% endblock %}
