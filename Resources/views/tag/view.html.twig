{% extends "NetgenMoreAdminUIBundle::pagelayout.html.twig" %}

{% set pathArray = [] %}
{% set siteTitleArray = [] %}
{% set tagPathArray = tag.pathString|trim( '/' )|split( '/' ) %}

{% for tagId in tagPathArray %}
    {% set tagKeyword = netgen_tags_tag_keyword( tagId ) %}

    {% set pathArray = pathArray|merge( [ {
        tag_id: tagId,
        url: tagId != tag.id ? '/tags/id/' ~ tagId : false,
        text: tagKeyword
    } ] ) %}

    {% set siteTitleArray = siteTitleArray|merge( [tagKeyword] ) %}
{% endfor %}

{% set siteTitle = siteTitleArray|reverse|join( ' / ' ) %}

{% set module_result = {
    'path': pathArray,
    'navigation_part': 'eztagsnavigationpart',
    'ui_context': 'navigation'
} %}

{% block content %}
    {% include 'design:tags/view.tpl' with {
        'tag': tag,
        'show_reindex_message': false
    } %}
{% endblock %}
