{% extends "NetgenMoreAdminUIBundle::pagelayout.html.twig" %}

{% set siteTitle = netgen_tags_tag_keyword( tag ) %}

{% set tagPathArray = tag.pathString|trim( '/' )|split( '/' ) %}
{% set pathArray = [] %}

{% for tagPathItem in tagPathArray %}
    {% set pathArray = pathArray|merge( [ {
        tag_id: tagPathItem,
        url: tagPathItem != tag.id ? path( '_eztagsTag', { 'tagId': tagPathItem } ) : false,
        text: netgen_tags_tag_keyword( tagPathItem )
    } ] ) %}
{% endfor %}

{% set module_result = {
    'path': pathArray,
    'navigation_part': 'eztagsnavigationpart',
    'ui_context': 'navigation'
} %}

{% block content %}
    {% include 'design:tags/view.tpl' with {
        'tag': tag,
        'show_reindex_message': false
    } %}
{% endblock %}
