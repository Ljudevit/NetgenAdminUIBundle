{% macro user_avatar( content ) %}{% spaceless %}
    {% include 'design:page_aside_user.tpl' %}
{% endspaceless %}{% endmacro %}

{% import _self as macros %}

{% set user_content = app.user.APIUser.content %}

<div class="aside-footer">
    {% set user_avatar = macros.user_avatar( user_content ) %}
    {% if user_avatar|trim is empty %}
        {% set user_avatar = asset( 'bundles/netgenmoreadminui/images/a0.jpg' ) %}
    {% endif %}

    <a href="#" class="user-dropdown-toggle dropdown-toggle" data-toggle="dropdown">
        <span class="user-avatar" style="background-image:url({{ user_avatar }})"></span>
    </a>

    <!-- dropdown -->
    <ul class="dropdown-menu user-dropdown">

        <li>
            <div class="user-avatar" style="background-image:url({{ user_avatar }})">
            </div>
            <h4 class="user-name">{{ ez_content_name( user_content ) }}</h4>
            <p class="user-role">{{ app.user.APIUser.login }}</p>
        </li>

        <li class="divider"></li>

        {% if ui_context != 'edit' and ui_context != 'browse' %}
            {% if ngmore_can_user( 'content', 'read', user_content ) %}
                <li><a href="{{ path( 'ez_urlalias', { 'locationId': user_content.contentInfo.mainLocationId } ) }}">View profile</a></li>
            {% endif %}

            {% if ngmore_can_user( 'content', 'edit', user_content ) %}
                <li>
                    <a href="{{ path( 'ez_legacy', { module_uri: '/content/edit/' ~ user_content.id } ) }}" title="Change name, email, password, etc.">Change information</a>
                </li>
            {% endif %}

            <li>
                <a href="{{ path( 'ez_legacy', { module_uri: '/user/password' } ) }}" title="Change password">Change password</a>
            </li>
        {% else %}
            <li><span class="disabled">View profile</span></li>
            <li><span class="disabled">Change information</span></li>
            <li><span class="disabled">Change password</span></li>
        {% endif %}

        <li class="divider"></li>

        {# {% if ui_context != 'edit' and ui_context != 'browse' %}
            {% if ezpreference( 'admin_edit_show_locations' ) %}
                <li class="hidden-folded">
                    <span>Locations are enabled</span>
                </li>

                <li>
                    <a href="{{ path( 'ez_legacy', { module_uri: '/user/preferences/set/admin_edit_show_locations/0' } ) }}" title="Disable location window when editing content.">Disable locations</a>
                </li>
            {% else %}
                <li class="hidden-folded">
                    <span>Locations are disabled</span>
                </li>

                <li>
