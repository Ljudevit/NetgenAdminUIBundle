                </li>
            {% endif %}

            {% if ezpreference( 'admin_edit_show_re_edit' ) %}
                <li class="hidden-folded">
                    <span>Re-edit is enabled</span>
                </li>

                <li>
                    <a href="{{ path( 'ez_legacy', { module_uri: '/user/preferences/set/admin_edit_show_re_edit/0' } ) }}" title="Disable &quot;Back to edit&quot; checkbox when editing content.">Disable Re-edit</a>
                </li>
            {% else %}
                <li class="hidden-folded">
                    <span>Re-edit is disabled</span>
                </li>

                <li>
                    <a href="{{ path( 'ez_legacy', { module_uri: '/user/preferences/set/admin_edit_show_re_edit/1' } ) }}" title="Enable &quot;Back to edit&quot; checkbox when editing content.">Enable Re-edit</a>
                </li>
            {% endif %}

            <li class="divider"></li>
        {% endif %} #}

        <li>
            {% if ui_context_edit %}
                <span title="Logout from the system." class="disabled">Logout</span>
